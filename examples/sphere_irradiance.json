{
  "_comment": [
    "The scene is an irradiance meter pointing up at a sphere of radius = 1 ",
    "with center h = 2 units away and a constant emitted radiance of ",
    "L = 10 W/m^2 sr. There's also a radiance meter pointing down at a ",
    "small reflective plate.",

    "The measured irradiance should be close to the calculated value of ",
    "E = pi * L * (r/h)^2, and the measured radiance should be ",
    "close to the calculated value of L_i = L * (r/h)^2."
  ],

  "scene": {
    "aggregate": {
      "type": "PrimitiveList",
      "primitives": [
        {
          "_comment": "Sphere light.",
          "type": "GeometricPrimitive",
          "shape": {
            "type": "Sphere",
            "samplingMethod": "visibleFast",
            "center": [0, 0, 2],
            "radius": 1
          },
          "material": {
            "type": "DiffuseMaterial",
            "samplingMethod": "cosine",
            "rho": { "type": "rgb", "r": 0.0, "g": 0.0, "b": 0.0 }
          },
          "light": {
            "type": "DiffuseAreaLight",
            "emission": { "type": "rgb", "r": 10, "g": 10, "b": 10 }
          }
        },
        {
          "_comment": "Small reflector.",
          "type": "GeometricPrimitive",
          "shape": {
            "type": "TriangleMesh",
            "vertices": [
              -0.1,  0.1, 0,
              -0.1, -0.1, 0,
               0.1,  0.1, 0,
               0.1, -0.1, 0
            ],
            "indices": [
              0, 1, 2,
              2, 1, 3
            ]
          },
          "material": {
            "type": "DiffuseMaterial",
            "samplingMethod": "cosine",
            "rho": { "type": "rgb", "r": 1, "g": 1, "b": 1 }
          }
        },
        {
          "_comment": "Irradiance meter.",
          "type": "PointPrimitive",
          "position": [0, 0, 0],
          "sensors": [
            {
              "type": "IrradianceMeter",
              "description": "at origin",
              "samplingMethod": "cosine",
              "up": [0, 0, 1],
              "sampleCount": 1024
            }
          ]
        },
        {
          "_comment": "Radiance meter.",
          "type": "PointPrimitive",
          "position": [0, 0, 0.1],
          "sensors": [
            {
              "type": "RadianceMeter",
              "description": "towards reflector",
              "target": [0, 0, 0],
              "sampleCount": 1024
            }
          ]
        }
      ]
    }
  },

  "renderer": {
    "type": "PathTracingRenderer",
    "pathType": "emittedLight",
    "russianRouletteMethod": "fixed",
    "russianRouletteStartIndex": 2,
    "russianRouletteMaxProbability": 1,
    "maxEdgeCount": 2,
    "sampler": {
      "type": "IndependentSampler"
    }
  }
}
