{
  "scene": {
    "aggregate": {
      "type": "PrimitiveList",
      "primitives": [
        {
          "_include": "cornell_box_bright_scene.json"
        },
        {
          "_comment": "Sensors.",
          "type": "PointPrimitive",
          "position": [0, -0.5, 0],
          "sensors": [
            {
              "_comment": "Towards back wall.",
              "type": "PinholeCamera",
              "outputPath": "cornell_box_bright_bdpt.png",
              "target":   [0, 1, 0],
              "up":       [0, 0, 1],
              "fov": 82,
              "width": 320,
              "height": 240,
              "samplesPerPixel": 8
            }
          ]
        }
      ]
    }
  },

  "renderer": {
    "type": "BidirectionalPathTracingRenderer",
    "weighingMethod": "uniform",
    "checkWeights": true,
    "russianRouletteMethod": "proportional",
    "russianRouletteStartIndex": 5,
    "russianRouletteMaxProbability": 0.95,
    "russianRouletteDelta": 1,
    "maxEdgeCount": 100,
    "recordLightContributions": true,
    "directSampleLight": true,
    "directSampleSensor": true,
    "sampler": {
      "type": "IndependentSampler"
    }
  }
}
