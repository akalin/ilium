{
  "scene": {
    "aggregate": {
      "type": "PrimitiveList",
      "primitives": [
        {
          "_include": "sphere_irradiance_scene.json"
        }
      ]
    }
  },

  "renderer": {
    "type": "BidirectionalPathTracingRenderer",
    "weighingMethod": "power",
    "checkWeights": true,
    "russianRouletteMethod": "fixed",
    "russianRouletteStartIndex": 2,
    "russianRouletteMaxProbability": 1,
    "maxEdgeCount": 2,
    "recordLightContributions": true,
    "directSampleLight": true,
    "directSampleSensor": true,
    "sampler": {
      "type": "IndependentSampler"
    }
  }
}
